<TaskListScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20sp"

        MDScrollView:
            
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            size_hint:.9,.8
            MDList:
                id: task_list

        MDBottomAppBar:
            md_bg_color: 0, 1, 0, 1
            MDTopAppBar:
                title: "Title"
                icon: "emoticon-angry"
                type: "bottom"
                mode: "end"
                icon_color: 0, 0, 0, 1
                on_action_button:
                    root.manager.current = "second_screen"
                    root.manager.transition.direction = "up"
                    root.manager.transition.duration = 0.6
        

    
<NewTaskScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20sp"
        size_hint: 1, 0.8
        pos_hint:{'center_x': 0.5, 'y': .2}
        MDTopAppBar:
            title: "Нове завдання"
            anchor_title: "left"
            
        MDTextField:
            hint_text: "No helper text"
            id: task_text
            size_hint_x: 0.9
            pos_hint:{'center_x': 0.5}
            mode: "fill"
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_x: 0.9
            pos_hint:{'center_x': 0.5}
            MDLabel:
                text: "Зробити до"
                size_hint_x: 0.3
                pos_hint: {'y': 0.2}
                valigh: "top"
            MDIconButton:
                icon: "calendar-alert-outline"
                pos_hint: {'y': 0.55}
                size_hint_x: 0.2
                valigh: "top"
                on_release:root.show_date_picker()
            MDLabel:
                size_hint_x: 0.5
                pos_hint: {'y': 0.2}
                id: date_text
                valigh: "top"
        MDBoxLayout:
            orientation: "vertical"
            
            MDRaisedButton:
                text: "Save"
                on_release: app.add_task(task_text.text, date_text.text)
            
            MDFlatButton:
                on_release: root.back()
                text:  "Скасувати"

<TaskItem>:
    id: task_item
    markup: True

    LeftCheckbox:
        id: check
    IconRightWidget:
        icon: 'delete-restore'
        theme_text_color: "Custom"
        text_color: 1, 0,0, 1
        on_release: root.delete_task(task_item)
